    <!-- Signup Form --> 
    <form ng-submit="submitEmail()" class="form-signin" name="forgotPasswordForm">
      <h2 class="form-signin-heading">Forgot Password</h2>
      <div class="row">

        <div class="control-group form-group col-md-12"
        ng-class="{'has-error':forgotPasswordForm.email.$invalid && forgotPasswordForm.email.$dirty}">
          <label>Your email address</label>
          <input type="email" class="form-control" placeholder="Email" name="email" ng-model="model.email" required />
          <span class="help-block has-error" ng-if="forgotPasswordForm.email.$dirty">
            <span ng-show="forgotPasswordForm.email.$error.required">Email address is required.</span>
            <span ng-show="forgotPasswordForm.email.$error.email">Not a valid email address.</span>
          </span>
        </div>

        <div class="control-group form-group">
          <div class="col-md-6">
            <button class="btn btn-primary btn-lg btn-block" type="submit" ng-disabled="forgotPasswordForm.$invalid">
              <span ng-show="!isLoading">Submit Email</span>
              <span class="overlord-loading-spinner fa fa-spinner" ng-show="isLoading"></span>
              <span ng-show="isLoading">Submitting Email...</span>
            </button>
          </div>
        </div>

      </div>

